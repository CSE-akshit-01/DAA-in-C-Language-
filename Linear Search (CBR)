#include <stdio.h>
void linearSearchByRef(int *arr, int n, int key, int *result) 
{
    *result = -1; 
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            *result = i;  
            return;
        }
    }
}

int main() {
    int arr[100], n, key, result;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter element to search: ");
    scanf("%d", &key);

    linearSearchByRef(arr, n, key, &result);

    if (result == -1)
        printf("Element %d not found in the array.\n", key);
    else
        printf("Element %d found at position %d\n", key, result + 1);

    return 0;
}





